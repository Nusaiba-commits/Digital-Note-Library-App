<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_primary">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="24dp"
        android:id="@+id/upload_icon"
        android:src="@drawable/baseline_local_library_24_light"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upload_icon"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/aleo_bold"
        android:text="Upload Form"
        android:textAlignment="center"
        android:textSize="43sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="15dp"
        android:id="@+id/upload_form_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upload_form_text"
        android:orientation="vertical"
        android:padding="25dp"
        android:id="@+id/upload_details">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:hint="Subject:"
            android:fontFamily="@font/aleo_bold"
            android:textColorHint="@color/black"
            android:backgroundTint="@color/white"
            android:textSize="25sp"
            android:background="@drawable/rounded_corner"
            android:id="@+id/subject_edit_text"
            android:inputType="text"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:hint="Year Group: "
            android:fontFamily="@font/aleo_bold"
            android:textColorHint="@color/black"
            android:backgroundTint="@color/white"
            android:textSize="25sp"
            android:background="@drawable/rounded_corner"
            android:id="@+id/year_edit_text"
            android:inputType="number"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/aleo_bold"
            android:textColorHint="@color/black"
            android:backgroundTint="@color/white"
            android:textSize="25sp"
            android:background="@drawable/rounded_corner"
            android:id="@+id/author_text_view"
            />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/upload_form_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/aleo_bold"
            android:text="Upload"
            android:textColor="@color/black"
            app:backgroundTint="@color/green_leaf"
            android:textSize="35sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aleo_bold"
            android:text="@string/disclaimer"
            android:textAlignment="viewStart"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingTop="17dp"
            android:id="@+id/upload_form_disclaimer" />

    </LinearLayout>


</RelativeLayout>